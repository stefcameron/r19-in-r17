{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false, // required to enable Babel (via ts-loader) to process resulting JS
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types",
      "./src/globals.d.ts"
    ]
  },
  "include": [
    "*.ts",
    "*.mts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tools/**/*.ts",
    "tools/**/*.mts"
  ]
}
