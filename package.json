{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Stefan Cameron",
  "license": "MIT",
  "engines": {
    "node": ">=21",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm -r --if-present --parallel run build",
    "build:dev": "pnpm -r --if-present --parallel run build:dev",
    "ci:build": "pnpm -r --if-present --parallel run ci:build",
    "ci:lint": "pnpm -r --if-present --parallel run ci:lint",
    "ci:test": "pnpm -r --if-present --parallel run ci:test",
    "fmt": "pnpm -r --if-present --parallel run fmt",
    "fmt:check": "pnpm -r --if-present --parallel run fmt:check",
    "lint": "pnpm -r --if-present --parallel run lint",
    "lint:code": "pnpm -r --if-present --parallel run lint:code",
    "lint:types": "pnpm -r --if-present --parallel run lint:types",
    "start": "pnpm --filter 'react-19' build && pnpm --filter 'react-17' run start",
    "start:19": "pnpm --filter 'react-19' run start",
    "test": "pnpm -r --if-present --parallel run test",
    "verify": "pnpm -r --if-present --parallel run verify"
  },
  "pnpm": {
    "overrides": {
    }
  }
}
