{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Stefan Cameron",
  "license": "MIT",
  "engines": {
    "node": ">=21",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm --filter '@monorepo/react-19' run build && pnpm --filter '@monorepo/react-17' run build",
    "ci:build": "pnpm -r run ci:build",
    "ci:lint": "pnpm run fmt:check && pnpm run lint",
    "ci:test": "pnpm -r --if-present --parallel run ci:test",
    "fmt": "prettier --write \"{*,packages/*/src/**/*,packages/*/tools/**/*,.github/workflows/**/*}.+(js|cjs|mjs|jsx|ts|cts|mts|tsx|css|yml|json)\"",
    "fmt:check": "prettier --check \"{*,packages/*/src/**/*,packages/*/tools/**/*,.github/workflows/**/*}.+(js|cjs|mjs|jsx|ts|cts|mts|tsx|css|yml|json)\"",
    "lint": "pnpm run lint:code && pnpm run lint:types && pnpm run fmt:check",
    "lint:code": "eslint \"{*,packages/*/src/**/*,packages/*/tools/**/*}.+(js|cjs|mjs|jsx|ts|cts|mts|tsx)\"",
    "lint:types": "pnpm -r --parallel run tsc --noEmit",
    "start": "pnpm --filter '@monorepo/react-19' build && pnpm --filter '@monorepo/react-17' run start",
    "start:19": "pnpm --filter '@monorepo/react-19' run start",
    "test": "pnpm run build && pnpm run lint && pnpm -r --if-present --parallel run test",
    "verify": "pnpm run fmt && pnpm run lint:code && pnpm run lint:types"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@babel/eslint-parser": "^7.26.5",
    "@babel/eslint-plugin": "^7.25.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@babel/plugin-transform-runtime": "^7.25.9",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^15.14.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "overrides": {}
  }
}
